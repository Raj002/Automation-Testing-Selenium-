package Project_Uses;

import java.util.Random;
import java.util.concurrent.TimeUnit;

import junit.framework.Assert;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.interactions.Actions;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;

public class Generate_Password 
{
	private static final String DIGITS="123456789";
	private static final String L_CASE_LETTERS="abcdefghijklmnopqrstuvwxyz";
	private static final String U_CASE_LETTERS="ABCDEFGHIJKLMNOPQRSTUVWXYZ";
	private static final String SYMBOLS="!@#$%^&*?";
	private static final String ALL=DIGITS+L_CASE_LETTERS+U_CASE_LETTERS+SYMBOLS;
	
	private static final char[] DIGITS_Array=DIGITS.toCharArray();
	private static final char[] L_CASE_ARRAY=L_CASE_LETTERS.toCharArray();
	private static final char[] U_CASE_ARRAY=U_CASE_LETTERS.toCharArray();
	private static final char[] SYMBOLS_ARRAY=SYMBOLS.toCharArray();
	private static final char[] ALL_ARRAY=ALL.toCharArray();
	
	static Random r=new Random();
	protected static final int MAX_LENGTH=5;
	
	public static String gen()
	{
		StringBuffer b=new StringBuffer();
		b.append(DIGITS_Array[r.nextInt(DIGITS_Array.length)]);
		b.append(L_CASE_ARRAY[r.nextInt(L_CASE_ARRAY.length)]);
		b.append(U_CASE_ARRAY[r.nextInt(U_CASE_ARRAY.length)]);
		b.append(SYMBOLS_ARRAY[r.nextInt(SYMBOLS_ARRAY.length)]);
		
		for(int i=0;i<MAX_LENGTH;i++)
		{
			b.append(ALL_ARRAY[r.nextInt(ALL_ARRAY.length)]);
		}
		return b.toString();
	}
	
	public static void main(String[] args) 
	{
		String pwd=gen();
		System.out.println("Generated password is : " +pwd);
		
	}
	
	
}
